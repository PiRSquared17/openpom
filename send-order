#
# This bash script is just an exemple,
# you must improve it for you needs
#
# called as: "$EXEC_CMD" "$CMD_FILE" "$cmd" &
# $cmd is multilined
#

# uncomment for debug
# out=/tmp/${0##*/}.$RANDOM
# echo $0 $* > $out
# exec 2>> $out
# set -x

[ $# -ne 2 ] && exit 2

MAX_EXTCMD=30  ### MAX EXTERNAL COMMAND
SLEEP_TIME=5   ### SLEEP X SECONDS AFTER MAX_EXTCMD IS REACHED

local_cmdfile="$1"
shift 1

oIFS=$IFS ; IFS=$'\n'
orders=( $@ )
IFS=$oIFS

if [ ! -p "${local_cmdfile}" ] ; then
  echo "${local_cmdfile} is not a named pipe" 1>&2
  exit 2
fi

for ((i=0 ; i < "${#orders[@]}" ; i++)) ; do
  if [ $i -gt 0 -a $(($i%$MAX_EXTCMD)) -eq 0 ] ; then
      sleep $SLEEP_TIME
  fi

  cat > "${local_cmdfile}" <<< "${orders[$i]}"
done

exit $?
